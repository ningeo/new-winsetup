{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "template": "\ue795 ",
          "foreground": "#3A86FF"
        },
        {
          "type": "path",
          "style": "plain",
          "properties": {
            "style": "full"
          },
          "foreground": "#00D4FF"
        },
        {
          "type": "git",
          "style": "plain",
          "template": " {{ .HEAD }}{{ if .Working.Changed }} \u270e {{ .Working.String }}{{ end }}",
          "foreground": "#6CB6FF"
        },
        {
          "type": "status",
          "style": "plain",
          "template": " \u2717",
          "foreground": "#FF6B6B",
          "properties": {
            "always_enabled": false
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "template": "\u276f ",
          "foreground": "#3A86FF"
        }
      ]
    }
  ]
}
